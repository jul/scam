<%def name="print_comment(comment, depth=0)">
<div class=top>

<div class=lefty >
<img style=border-radius:24px width=48px height=48px src="${fo["_pics"][0][comment["user_id"]]}" >
</div>
    <p class="${comment["category"]}" >
    <input type=hidden class=hidden name=id value=${comment["id"]} >
    ${comment["id"]} : @${fo["_name"][0][comment["user_id"]]|h} :
    ${comment["category"]|h}<br/>
    <code>
    ${escape(comment["message"]).replace("\n","<br/>")}
    </code>
    <br/>
    <input type=submit value=reply >
    <input type=submit value=attach ><br/>

    %if comment["factoid"]:
    <a href=${comment["factoid"]}>${comment["factoid"] |u}</a><br/>
    %endif 
    % for annexe in fo["annexe"][0].get(comment['id'], []):
    <embed src="${annexe}" width=100%  />
    % endfor
</p>
% if "answer" in  comment.keys():
    % for item in comment["answer"]:
        % if "answer" in item.keys():
            ${print_comment(item, depth+1)}
        % else:
            <div>
<div class=lefty >
<img style=border-radius:24px width=48px height=48px src="${fo["_pics"][0][item["user_id"]]}" >
</div>
                <p class=${item["category"]} >
                <input type=hidden class=hidden name=id value=${item["id"]} >
                <input type=hidden name=user_id value=@${item["user_id"]} >
                ${item["id"]} : @${fo["_name"][0][item["user_id"]]|h} :
                ${item["category"]|h}<br/>
                ${escape(item["message"]).replace("\n","<br>")}
                <br/>

    %if comment["factoid"]:
    <a href=${comment["factoid"]}>${comment["factoid"] |u}</a><br/>
    %endif 
    <input type=submit value=reply >
    <input type=submit value=attach >
    <br/>

    <a href=${comment["factoid"]} >${comment["factoid"] or ""|u}</a><br/>
    % for annexe in fo["annexe"][0].get(item['id'], []):
    <embed src="${annexe}" width=100%  />
    % endfor
            </div>
            </p>
        % endif
    % endfor
% endif
</div>
</%def>



%for item in fo["result"][0]:
    ${ print_comment(item, 0) }
%endfor

